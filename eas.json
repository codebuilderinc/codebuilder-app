{
  "cli": {
    "version": ">= 15.40.0",
    "appVersionSource": "local"
  },
  "build": {
    "development": {
      "developmentClient": true,
      "distribution": "internal",
      "android": {
        "buildType": "apk",
        "gradleCommand": ":app:assembleDebug",
        "node": "22.14.0",
        "npm": {
          "version": "11.1.0"
        }
      },
      "ios": {
        "simulator": true
      }
    },
    "preview": {
      "distribution": "internal",
      "android": {
        "buildType": "apk",
        "node": "22.14.0"
      },
      "ios": {
        "buildConfiguration": "Release"
      }
    },
    "production": {
      "distribution": "store",
      "autoIncrement": false,
      "android": {
        "node": "22.14.0",
        "env": {
          "EXPO_NO_CACHE": "1"
        },
        "buildType": "apk",
        "gradleCommand": ":app:assembleRelease",
        "npm": {
          "version": "11.1.0"
        }
      },
      "ios": {
        "enterpriseProvisioning": "universal"
      }
    }
  },
  "submit": {
    "production": {
      "android": {
        "serviceAccountKeyPath": "path/to/service-account-key.json",
        "track": "production"
      },
      "ios": {
        "appleId": "your@apple.id",
        "ascAppId": "APP_ID"
      }
    }
  }
}